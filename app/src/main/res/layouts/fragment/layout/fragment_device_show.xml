<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_device_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/theme_secondary"
    android:orientation="vertical"
    android:paddingLeft="@dimen/form_padding"
    android:paddingRight="@dimen/form_padding"
    tools:context=".ui.deviceShow.DeviceShowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/form_padding"
        android:paddingRight="@dimen/form_padding">

        <!-- Reference input -->

        <ImageView
            android:id="@+id/family"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/icon_smartphone" />

        <TextView
            android:id="@+id/reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/device_show_spacing" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="status" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/device_show_spacing" />

        <!-- Space -->

        <!-- Family Spinner -->

        <TextView
            android:id="@+id/brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="brand" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/device_show_spacing" />

        <!-- Space -->
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="name" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/device_show_spacing" />

        <!-- Brand input -->

        <!-- Space -->
        <TextView
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="website" />

        <!-- Name input -->

        <!-- Space -->

        <!-- Space -->

        <!-- Space -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/device_show_spacing" />

        <!-- Add Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_device_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/form_delete_device_button"
            app:backgroundTint="@color/theme_primary"></com.google.android.material.button.MaterialButton>
    </LinearLayout>
</LinearLayout>